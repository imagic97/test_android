<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp12"
        android:layout_marginTop="@dimen/dp12"
        android:layout_marginEnd="@dimen/dp12"
        android:autofillHints=""
        android:background="@drawable/shape_search_input_bg"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="@dimen/dp12"
        android:hint="搜索产品"
        android:inputType="text"
        android:paddingStart="@dimen/dp12"
        android:paddingTop="@dimen/dp12"
        android:paddingBottom="@dimen/dp12"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="#B6B9BF"
        android:textSize="@dimen/sp16" />

    <ImageView
        android:layout_width="@dimen/dp264"
        android:layout_height="@dimen/dp40"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginBottom="@dimen/dp15"
        android:background="#EBEBEB" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp12"
        android:layout_marginTop="@dimen/dp12"
        android:layout_marginEnd="@dimen/dp12"
        android:autofillHints=""
        android:background="@drawable/shape_search_input_bg"
        android:hint="请输入商品条形码"
        android:inputType="text"
        android:paddingStart="@dimen/dp12"
        android:paddingTop="@dimen/dp12"
        android:paddingBottom="@dimen/dp12"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="#B6B9BF"
        android:textSize="@dimen/sp16" />

    <Button
        android:id="@+id/search_scan_btn"
        android:layout_width="@dimen/dp124"
        android:layout_height="@dimen/dp124"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp16"
        android:layout_marginBottom="@dimen/dp37"
        android:background="@drawable/selector_search_scan" />

    <com.smartid.muji_rfid_app.ui.widgets.EntryBtnLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp12"
        android:layout_marginEnd="@dimen/dp12"
        android:gravity="center"
        android:paddingTop="@dimen/dp14"
        android:paddingBottom="@dimen/dp14"
        app:animation="scale"
        app:backgroundColor="#990925"
        app:overColor="#FFFFFF"
        app:overRadius="@dimen/dp40"
        app:radius="@dimen/dp4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:tag="TextView"
            android:text="最近搜索记录"
            android:textColor="@drawable/selector_textcolor_b2w"
            android:textSize="@dimen/sp14" />

    </com.smartid.muji_rfid_app.ui.widgets.EntryBtnLayout>


</LinearLayout>