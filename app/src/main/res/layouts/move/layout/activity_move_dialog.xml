<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/shape_common_dialog_bg"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp15"
    android:paddingTop="@dimen/dp12"
    android:paddingEnd="@dimen/dp15"
    android:paddingBottom="@dimen/dp18">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="读取到顾客保留库位的商品："
        android:textColor="@color/black"
        android:textSize="@dimen/sp14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:background="@drawable/shape_popup_text_content_bg"
        android:paddingStart="@dimen/dp8"
        android:paddingTop="@dimen/dp12"
        android:paddingEnd="@dimen/dp8"
        android:paddingBottom="@dimen/dp12">

        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dp7"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp9"
        android:text="请确认是否将此物加入到卖场？"
        android:textColor="@color/black"
        android:textSize="@dimen/sp14" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp34"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_btn_positive"
            android:layout_width="@dimen/dp105"
            android:layout_height="@dimen/dp41"
            android:background="@drawable/selector_primary_btn_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/dp16"
            android:paddingTop="@dimen/dp10"
            android:paddingRight="@dimen/dp16"
            android:paddingBottom="@dimen/dp10"
            android:text="是"
            android:textColor="@color/white" />

        <View
            android:id="@+id/btn_space"
            android:layout_width="@dimen/dp24"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/dialog_btn_negative"
            android:layout_width="@dimen/dp105"
            android:layout_height="@dimen/dp41"
            android:background="@drawable/selector_primary_btn_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/dp16"
            android:paddingTop="@dimen/dp10"
            android:paddingRight="@dimen/dp16"
            android:paddingBottom="@dimen/dp10"
            android:singleLine="true"
            android:text="否"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>