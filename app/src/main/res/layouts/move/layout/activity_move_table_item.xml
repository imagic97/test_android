<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="5.5dp"
    android:paddingBottom="5.5dp">

    <TextView
        android:id="@+id/table_cell_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="@dimen/dp12"
        android:text="商品"
        android:textColor="@color/black"
        android:textSize="@dimen/sp14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/table_cell_count"
        android:layout_width="@dimen/dp98"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp6"
        android:text="数量"
        android:textColor="@color/black"
        android:textSize="@dimen/sp14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/table_cell_size"
        android:layout_width="@dimen/dp98"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp6"
        android:text="尺寸"
        android:textColor="@color/black"
        android:textSize="@dimen/sp14"
        android:textStyle="bold" />

</LinearLayout>