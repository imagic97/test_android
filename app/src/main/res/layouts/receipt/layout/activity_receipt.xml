<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/receipt_bg"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <ImageView
        android:layout_width="@dimen/dp148"
        android:layout_height="@dimen/dp120"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp17"
        android:src="@drawable/replenish_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp68"
        android:gravity="center"
        android:orientation="horizontal">

        <com.smartid.muji_rfid_app.ui.widgets.EntryBtnLayout
            android:id="@+id/entry_receipt_plan"
            android:layout_width="@dimen/dp111"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:animation="scale"
            app:backgroundColor="#990925"
            app:overColor="#FFFFFF"
            app:overRadius="@dimen/dp50"
            app:radius="@dimen/dp4">

            <ImageView
                android:layout_width="@dimen/dp77"
                android:layout_height="@dimen/dp77"
                android:layout_gravity="center"
                android:duplicateParentState="true"
                android:src="@drawable/selector_main_entry_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp13"
                android:height="@dimen/dp21"
                android:duplicateParentState="true"
                android:text="收货准备"
                android:textColor="@drawable/selector_textcolor_b2w" />
        </com.smartid.muji_rfid_app.ui.widgets.EntryBtnLayout>

        <View
            android:layout_width="@dimen/dp44"
            android:layout_height="@dimen/dp111" />

        <com.smartid.muji_rfid_app.ui.widgets.EntryBtnLayout
            android:id="@+id/entry_receipt_process"
            android:layout_width="@dimen/dp111"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:animation="scale"
            app:backgroundColor="#990925"
            app:overColor="#FFFFFF"
            app:overRadius="@dimen/dp50"
            app:radius="@dimen/dp4">

            <ImageView
                android:layout_width="@dimen/dp77"
                android:layout_height="@dimen/dp77"
                android:layout_gravity="center"
                android:duplicateParentState="true"
                android:src="@drawable/selector_main_entry_receipt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp13"
                android:height="@dimen/dp21"
                android:duplicateParentState="true"
                android:text="收货流程"
                android:textColor="@drawable/selector_textcolor_b2w" />
        </com.smartid.muji_rfid_app.ui.widgets.EntryBtnLayout>
    </LinearLayout>


</LinearLayout>