<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_calendar_item_bg"
    android:orientation="horizontal"
    android:paddingBottom="1dp">

    <LinearLayout
        android:layout_width="@dimen/dp88"
        android:layout_height="wrap_content"
        android:background="#EBEBEB"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dp11"
        android:paddingStart="@dimen/dp12"
        android:paddingEnd="@dimen/dp11">

        <TextView
            android:id="@+id/receipt_calendar_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="13"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/receipt_calendar_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="01æœˆ"
            android:textColor="@color/main_color"
            android:textSize="@dimen/sp16" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/receipt_calendar_status_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp6"
        android:layout_marginEnd="@dimen/dp6"
        android:layout_weight="1" />
</LinearLayout>