<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/receipt_bg"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp77"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/receipt_scan_btn"
            android:layout_width="@dimen/dp124"
            android:layout_height="@dimen/dp124"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginBottom="@dimen/dp37"
            android:background="@drawable/selector_search_scan" />
    </LinearLayout>
</LinearLayout>