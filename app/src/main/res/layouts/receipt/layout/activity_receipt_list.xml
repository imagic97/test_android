<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.receipt.ReceiptListActivity">

    <include layout="@layout/common_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp79"
            android:layout_height="@dimen/dp73"
            android:background="@drawable/ic_receipt_mark_bg"
            android:paddingHorizontal="@dimen/dp20"
            android:paddingTop="@dimen/dp35"
            android:paddingBottom="@dimen/dp8"
            android:scaleType="center"
            android:src="@drawable/ic_plan_received" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp73"
            android:layout_weight="1"
            android:background="@color/main_color"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/dp26">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="箱数"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/dp17"
                android:background="#EBEBEB" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="包数"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/dp17"
                android:background="#EBEBEB" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="180"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="件数"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/receipt_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp8"
        android:layout_weight="1" />

    <Button
        android:id="@+id/receipt_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp17"
        android:layout_marginBottom="@dimen/dp17"
        android:background="@drawable/selector_primary_btn_bg"
        android:paddingHorizontal="@dimen/dp73"
        android:paddingVertical="@dimen/dp10"
        android:text="下一步"
        android:textColor="@color/white" />

</LinearLayout>