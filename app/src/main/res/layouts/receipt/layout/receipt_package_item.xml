<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_receipt_confirm_item_bg"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp12">

        <ImageView
            android:id="@+id/receipt_package_checkbox"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:background="@drawable/shape_receipt_checkbox_bg"
            android:src="@drawable/selector_checkbox" />

        <TextView
            android:id="@+id/receipt_package_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:paddingHorizontal="@dimen/dp10"
            android:text="M"
            android:textAllCaps="false"
            android:textColor="@drawable/selector_receipt_confirm_item_textcolor"
            android:textSize="@dimen/sp14" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dp14"
            android:background="@drawable/selector_receipt_confirm_item_textcolor" />

        <TextView
            android:id="@+id/receipt_package_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:paddingHorizontal="@dimen/dp10"
            android:text="50061211020389173"
            android:textAllCaps="false"
            android:textColor="@drawable/selector_receipt_confirm_item_textcolor"
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@drawable/shape_dotted_line"
        android:layerType="software" />

</LinearLayout>