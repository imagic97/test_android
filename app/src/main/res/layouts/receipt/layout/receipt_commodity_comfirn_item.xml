<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="5.5dp"
    android:paddingBottom="5.5dp">

    <TextView
        android:id="@+id/commodity_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="@dimen/dp12"
        android:text="4523354677789"
        android:textColor="@color/black"
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/commodity_expect_count"
        android:layout_width="@dimen/dp98"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp6"
        android:text="58"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/commodity_read_count"
        android:layout_width="@dimen/dp98"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp6"
        android:text="5"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/sp14" />

</LinearLayout>