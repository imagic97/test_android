<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_marginStart="@dimen/dp12"
    android:layout_marginEnd="@dimen/dp12"
    android:background="@drawable/shape_common_dialog_bg"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp28"
    android:paddingTop="@dimen/dp18"
    android:paddingEnd="@dimen/dp28"
    android:paddingBottom="@dimen/dp18">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="补货报告"
        android:textColor="@color/black"
        android:textSize="@dimen/sp16"
        android:visibility="visible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp33"
        android:text="请输入你的员工代码"
        android:textColor="@color/black"
        android:textSize="@dimen/sp16" />

    <EditText
        android:id="@+id/dialog_permit_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        android:autofillHints=""
        android:background="@drawable/shape_dialog_permit_input_bg"
        android:inputType="number"
        android:padding="@dimen/dp12"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/sp18" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp36"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_btn_negative"
            android:layout_width="@dimen/dp105"
            android:layout_height="@dimen/dp41"
            android:background="@drawable/selector_tertiary_btn_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/dp16"
            android:paddingTop="@dimen/dp10"
            android:paddingRight="@dimen/dp16"
            android:paddingBottom="@dimen/dp10"
            android:text="取消" />

        <View
            android:id="@+id/btn_space"
            android:layout_width="@dimen/dp24"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/dialog_btn_positive"
            android:layout_width="@dimen/dp105"
            android:layout_height="@dimen/dp41"
            android:background="@drawable/selector_primary_btn_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/dp16"
            android:paddingTop="@dimen/dp10"
            android:paddingRight="@dimen/dp16"
            android:paddingBottom="@dimen/dp10"
            android:singleLine="true"
            android:text="接受"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>