<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/shape_common_dialog_bg"
    android:minWidth="@dimen/dp260"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp18"
    android:paddingBottom="@dimen/dp18">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="TEXT"
        android:textColor="@color/black"
        android:textSize="@dimen/sp16"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp28"
        android:layout_marginTop="@dimen/dp33"
        android:layout_marginRight="@dimen/dp28"
        android:gravity="center"
        android:text="CONTENT"
        android:textColor="@color/black"
        android:textSize="@dimen/sp16" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp33"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_btn_negative"
            android:layout_width="@dimen/dp105"
            android:layout_height="@dimen/dp41"
            android:background="@drawable/selector_tertiary_btn_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/dp16"
            android:paddingTop="@dimen/dp10"
            android:paddingRight="@dimen/dp16"
            android:paddingBottom="@dimen/dp10"
            android:text="cancel" />

        <View
            android:id="@+id/btn_space"
            android:layout_width="@dimen/dp24"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/dialog_btn_positive"
            android:layout_width="@dimen/dp105"
            android:layout_height="@dimen/dp41"
            android:background="@drawable/selector_primary_btn_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/dp16"
            android:paddingTop="@dimen/dp10"
            android:paddingRight="@dimen/dp16"
            android:paddingBottom="@dimen/dp10"
            android:singleLine="true"
            android:text="OK" />

    </LinearLayout>

</LinearLayout>