<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dp10"
    android:paddingEnd="@dimen/dp10"
    android:paddingBottom="@dimen/dp10">
    <!-- 在 listview 中 margin 无效  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_login_select_item_bg"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp9"
        android:paddingTop="@dimen/dp10"
        android:paddingEnd="@dimen/dp9"
        android:paddingBottom="@dimen/dp10">

        <TextView
            android:id="@+id/shop_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dp20"
            android:text="shop_id"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingEnd="@dimen/dp20"
            android:text="shop_name"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="@dimen/dp16"
            android:layout_height="@dimen/dp16"
            android:layout_gravity="center"
            android:src="@drawable/ic_entry" />

    </LinearLayout>
</LinearLayout>
